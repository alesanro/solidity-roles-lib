{
  "name": "solidity-roles-lib",
  "version": "0.0.1",
  "description": "Roles Shared Library",
  "main": "truffle.js",
  "scripts": {
    "test": "truffle test",
    "coverage": "./node_modules/.bin/solidity-coverage",
    "release": "standard-version",
    "compile": "npx truffle compile",
    "compile:all": "npx truffle compile --all",
    "testrpc": "npx ganache-cli -g 1 --gasLimit 4700000 --trace_request true | grep -Ev \"FilterSubprovider|eth_getFilterChanges\"",
    "lint:sol": "npx solium --dir contracts",
    "lint:js": "npx eslint . --fix",
    "lint": "npm run lint:sol && npm run lint:js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ChronoBank/solidity-roles-lib.git"
  },
  "keywords": [
    "solidity",
    "chronobank",
    "laborx"
  ],
  "author": "LaborX PTY",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/ChronoBank/solidity-roles-lib/issues"
  },
  "homepage": "https://github.com/ChronoBank/solidity-roles-lib#readme",
  "dependencies": {
    "solidity-shared-lib": "alesanro/solidity-shared-lib#solc-downgrade-v0.4.21",
    "solidity-eventshistory-lib": "alesanro/solidity-eventshistory-lib#solc-downgrade-v0.4.21",
    "solidity-storage-lib": "alesanro/solidity-storage-lib#solc-downgrade-v0.4.21"
  },
  "devDependencies": {
    "abi-decoder": "^1.0.9",
    "coveralls": "^3.0.1",
    "solidity-coverage": "^0.5.4",
    "truffle": "4.1.5",
    "ganache-cli": "6.1.0",
    "standard-version": "^4.0.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-register": "^6.26.0",
    "eslint": "4",
    "solium": "1",
    "babel-eslint": "^8.2.5"
  }
}
